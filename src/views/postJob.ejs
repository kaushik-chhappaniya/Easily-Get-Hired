<style>
  #logout-button {
      display: flex !important;
   }
   
</style>

<div class="container">
  <h3>Welcome <%= name %></h3>  
  <h2>Create a Job Posting</h2>
  <%= recruiterId %>
    <form action="/recruiter/post-job" method="POST">
      <div class="row mb-3">
        <label for="jobCategory" class="col-sm-2 col-form-label">Job Category</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="jobCategory" name="jobCategory" required>
        </div>
      </div>
      <div class="row mb-3">
        <label for="jobDesignation" class="col-sm-2 col-form-label">Job Designation</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="jobDesignation" name="jobDesignation" required>
        </div>
      </div>
      <div class="row mb-3">
        <label for="jobLocation" class="col-sm-2 col-form-label">Job Location</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="jobLocation" name="jobLocation" required>
        </div>
      </div>
      <div class="row mb-3">
        <label for="companyName" class="col-sm-2 col-form-label">Company Name</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="companyName" name="companyName" required>
        </div>
      </div>
      <div class="row mb-3">
        <label for="salary" class="col-sm-2 col-form-label">Salary</label>
        <div class="col-sm-10">
          <input type="number" class="form-control" id="salary" name="salary" required>
        </div>
      </div>
      <div class="row mb-3">
        <label for="applyBy" class="col-sm-2 col-form-label">Apply By</label>
        <div class="col-sm-10">
          <input type="date" class="form-control" id="applyBy" name="applyBy" required>
        </div>
      </div>
      <div class="row mb-3">
        <label for="skillsRequired" class="col-sm-2 col-form-label">Skills Required</label>
        <div class="col-sm-10">
          <textarea class="form-control" id="skillsRequired" name="skillsRequired" rows="3" required></textarea>
          <small class="form-text text-muted">Separate skills with commas (e.g., JavaScript, React, Node.js)</small>
        </div>
      </div>
      <div class="row mb-3">
        <label for="numberOfOpenings" class="col-sm-2 col-form-label">Number of Openings</label>
        <div class="col-sm-10">
          <input type="number" class="form-control" id="numberOfOpenings" name="numberOfOpenings" min="1" required>
        </div>
      </div>
      <button type="submit" class="btn btn-primary">Create Job Posting</button>
    </form>
  </div>
  